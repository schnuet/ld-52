script/source = "extends Area2D

var speed = 100;
var moving = false;

var game;

func _ready():
	if Globals.get(\"game_ready\") != true:
		yield(SceneManager, \"scene_loaded\");
	
	var variance = 60;
	scale = scale * ((100 - variance / 2) + (randi() % variance)) / 100;

	game = SceneManager.get_entity(\"Game\");
	
	moving = true;
	$AnimatedSprite.play(\"hop\");
	
func _physics_process(delta):
	if (Globals.get(\"paused\")): return;
	
	if moving:
		position.x -= speed * delta;
	else:
		position.x -= (speed * 2) * delta;

func _enter_collector(_collector):
	print(\"enter collector\");
	var biomass = Globals.get(\"biomass\");
	game.set_biomass(biomass + 1);
	queue_free();
	
func _exit_collector(_collector):
	pass;


func optionally_continue():
	if $AnimatedSprite.animation == \"lookback\" and randi() % 6 == 1:
		$AnimatedSprite.frame = 0;
		$AnimatedSprite.play(\"lookback_pong\");
		
	elif $AnimatedSprite.animation == \"hop\" and randi() % 20 == 1:
		moving = false;
		$AnimatedSprite.stop();
		$AnimatedSprite.play(\"lookback\");
		
	else:
		moving = true;
		$AnimatedSprite.frame = 0;
		$AnimatedSprite.play(\"hop\");

func _on_AnimatedSprite_animation_finished():
	optionally_continue();
